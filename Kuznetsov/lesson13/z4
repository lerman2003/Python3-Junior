import random

def upcl(guessed_letter,clue,secret_word,buk):
    index = 0
    while index<len(secret_word):
        if guessed_letter == secret_word[index]:
            clue[index] = guessed_letter
            buk -=1
        index += 1
    return(buk)
                
hard = ['легкий','средний','тяжелый']
slog = input("Введите сложность(легкий,средний,тяжелый)")
for i in range(3):
    if slog==hard[i]:
        if i==0:
            lives=9
        if i==1:
            lives=6
        if i==2:
            lives=3
            
words = ['пар','два','как','замок','солнце']
secret_word = random.choice(words)
clue = list('?'*len(secret_word))
heart_symvol= u'\u2764'
guessed_word_correctly = False
buk = len(secret_word)

while lives>0:
    print(clue)
    print("Осталось жизней"+heart_symvol*lives)
    guess = input("Угодайте букву или слово целиком: ")
    if guess == secret_word:
        guessed_word_correctly = True
        print("Правильно")
        break
    if guess in secret_word:
        buk = upcl(guess,clue,secret_word,buk)
    else:
        print("Ответ неправильный, -1 жизнь")
        lives-=1
    if buk==0:
        print("Победа!!!!))))) было загадано" + secret_word)
        break

if guessed_word_correctly:
    print("Победа!!!!))))) было загадано" + secret_word)
elif buk!=0:
    print("Вы проиграи(((( было загадано" + secret_word)
