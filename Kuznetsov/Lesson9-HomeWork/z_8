from random import randint
import time
kol = int(input("Введите колличество цифр в наборе: "))
print("Подождите")
for i in range(4):
    time.sleep(0.5)
    print(".",end="")
print()
z = 0
Min=0
for i in range(1,kol+1):
    chislo = randint(-100,100)
    if chislo<Min:
        Min=chislo
        z=i
print("Номер (по счету) самого маленького числа:",z)
