a = int(input("Введите число от 1 до 7: "))

print("==========")
if 1<=a<=7:
    if a==1:
        print("Понедельник")
    if a==2:
        print("Вторник")
    if a==3:
        print("Среда")
    if a==4:
        print("Четверг")
    if a==5:
        print("Пятница")
    if a==6:
        print("Субота")
    if a==7:
        print("Воскресенье")
else:
    print("проверьте правильность введенных данных")
